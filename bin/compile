#!/usr/bin/env bash

# (c) 2017 XYSec Labs

set -euo pipefail

indent() {
    sed -u 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR=$2

PAYLOADS_URL=https://github.com/openstack/syntribos-payloads/archive/master.zip
PAYLOADS_PATH=$BUILD_DIR/syntribos/payloads

echo "-----> Installing pip"
mkdir -p $BUILD_DIR/.apt/usr/local/lib/python2.7/dist-packages/
curl -sSk https://bootstrap.pypa.io/get-pip.py | python2.7

echo "-----> Installing Syntribos"
$BUILD_DIR/.apt/usr/local/bin/pip2.7 install syntribos

echo "-----> Downloading Syntribos payloads from $PAYLOADS_URL"
curl -sSLO $PAYLOADS_URL

echo "-----> Extracting payloads to $PAYLOADS_PATH"
mkdir -p $PAYLOADS_PATH
unzip master.zip -d $PAYLOADS_PATH

