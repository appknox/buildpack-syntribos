#!/usr/bin/env bash

# (c) 2017 XYSec Labs

set -euo pipefail

indent() {
    sed -u 's/^/       /'
}

echo "-----> Downloading Syntribos payloads"

PAYLOADS_URL=https://github.com/openstack/syntribos-payloads/archive/master.zip
curl -sSLO $PAYLOADS_URL

echo "-----> Extracting to $1/syntribos/payloads"

mkdir -p $1/syntribos/payloads
unzip master.zip -d $1/syntribos/payloads
